{
  "name": "graduation-teams",
  "version": "1.0.0",
  "description": "A simple web application to gather teams for graduation project",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node -r dotenv/config -r source-map-support/register dist",
    "postinstall": "npm run build:ts",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon -r dotenv/config -r source-map-support/register dist",
    "watch": "npm run build:ts && concurrently --kill-others \"npm run watch:ts\" \"npm run watch:node\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kerolloz/team-up.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kerolloz/team-up/issues"
  },
  "homepage": "https://github.com/kerolloz/team-up#readme",
  "dependencies": {
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-bearer-token": "^2.4.0",
    "helmet": "^3.21.2",
    "joi": "^14.3.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.8.2",
    "mongoose-paginate-v2": "^1.3.6",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.2",
    "source-map-support": "^0.5.16",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.43",
    "@types/joi": "^14.3.4",
    "@types/mongoose": "^5.5.34",
    "@types/mongoose-paginate-v2": "^1.3.0",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.21",
    "@types/nodemailer": "^6.4.0",
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.4",
    "ts-node": "^8.5.4"
  },
  "engines": {
    "node": "10.15.3",
    "npm": "6.9.0"
  }
}
