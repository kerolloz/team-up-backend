  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kerolloz/team-up/issues"
  },
  "homepage": "https://github.com/kerolloz/team-up#readme",
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "@typegoose/typegoose": "^12.5.0",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.1",
    "mongoose": "~8.4.1",
    "morgan": "^1.10.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.4.5"
