  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@types/chai": "^4.3.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.9",
    "@types/sinon": "^17.0.3",
    "mocha": "^10.4.0",
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "sinon": "^18.0.0",
    "ts-node": "^10.9.2",
    "mongodb-memory-server": "^9.3.0",
    "ts-node-dev": "^2.0.0"
  },
  "trustedDependencies": ["@biomejs/biome", "mongodb-memory-server"]
